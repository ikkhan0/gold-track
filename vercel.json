{
    "buildCommand": "cd client && npm install && npm run build",
    "outputDirectory": "client/dist",
    "installCommand": "npm install",
    "framework": null,
    "functions": {
        "api/index.js": {
            "runtime": "nodejs18.x"
        }
    },
    "rewrites": [
        { "source": "/api/(.*)", "destination": "/api/index.js" },
        { "source": "/(.*)", "destination": "/index.html" }
    ]
}