{
    "version": 2,
    "builds": [
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "api/index.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/.*",
            "dest": "/api/index.js"
        },
        {
            "src": "/api",
            "dest": "/api/index.js"
        },
        {
            "src": "/assets/(.*)",
            "dest": "/client/assets/$1"
        },
        {
            "src": "/(.*\\.js)",
            "dest": "/client/$1"
        },
        {
            "src": "/(.*\\.css)",
            "dest": "/client/$1"
        },
        {
            "src": "/(.*\\.(png|jpg|jpeg|gif|svg|ico|webp))",
            "dest": "/client/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/client/index.html"
        }
    ]
}